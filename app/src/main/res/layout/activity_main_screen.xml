<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <Button
        android:id="@+id/button_start"
        android:text="@string/button_start_sending"
        android:onClick="startSending"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/button_stop"
        android:text="@string/button_stop_sending"
        android:onClick="stopSending"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/text_position_date"
        android:text="@string/textview_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_position_lat"
        android:text="@string/textview_lat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_position_lon"
        android:text="@string/textview_lon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
